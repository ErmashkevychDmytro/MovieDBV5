<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/caseImege"
        android:gravity="center_horizontal"
        android:layout_width="220dp"
        android:layout_height="240dp"
        >

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageActorPhoto"
        android:layout_width="180dp"
        android:layout_height="240dp"
        />

    </RelativeLayout>
    <TextView
        android:id="@+id/textActorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/caseImege"
        app:layout_constraintEnd_toEndOf="@+id/caseImege"
        app:layout_constraintStart_toStartOf="@+id/caseImege" />


</androidx.constraintlayout.widget.ConstraintLayout>